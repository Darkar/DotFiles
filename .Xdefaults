! FONTS
! -----

URxvt*font: xft:Source Code Pro:regular:size=10
URxvt*boldFont: xft:Source Code Pro:bold:size=10
URxvt*italicFont: xft:Source Code Pro:italic:size=10
URxvt*boldItalicFont: xft:Source Code Pro:bold italic:size=10

! XFT FONT CONFIG
! ---------------

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! TERMINAL CONFIG
! ---------------

! font spacing
URxvt*letterSpace: 0
URxvt.lineSpace: 0

! general settings
URxvt*saveline: 15000
URxvt*termName: rxvt-256color
URxvt*iso14755: false
URxvt*urgentOnBell: true

! appearance
URxvt*cursorColor: #d8dee8
URxvt*depth: 24
URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*internalBorder: 15
URxvt*externalBorder: 0
URxvt.geometry: 84x22

