##################################
# Fichier de configuration d' i3 #
##################################

set $mod Mod4
set $alt Mod1

set $TERMINAL kitty

# Déplacement d'une fenêtre en mode floating
floating_modifier $mod

#bindsym $mod+button1 move left
#bindsym $mod+button1 move right

# Verrouille l'écran
bindsym $mod+l exec $HOME/.config/i3/i3lock.sh

# Lance un terminal
bindsym $mod+Return exec $TERMINAL

# Lance de PCManFM
bindsym $mod+p exec thunar

# Screenshot
bindsym Print exec maim -u -s | xclip -selection clipboard -t image/png && xclip -selection clipboard -t image/pn -o > $HOME/Images/Screenshots/$(date +%d-%m-%Y_%H-%M-%S).png

# Ferme le fenêtre
bindsym $mod+Q kill

# Lancement des menus
#bindsym $mod+a exec --no-startup-id "rofi -show drun -theme menu -run-shell-command '{terminal} -e {cmd}'"
#bindsym $mod+d exec --no-startup-id "rofi -show run -theme menu -run-shell-command '{terminal} -e {cmd}'"
bindsym $mod+a exec --no-startup-id "rofi -show drun -theme $HOME/.config/rofi/menu.rasi"


# Change le focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Déplacement de la fenêtre
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Mode horizontal
bindsym $mod+h split h

# Mode vertical
bindsym $mod+v split v

# Mode plein écran
bindsym $mod+f fullscreen toggle

# Change le layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# Activation du  tiling / floating
bindsym $mod+Shift+space floating toggle

# Déplacement des workspace sur les autres écrans
bindsym $alt+Left move workspace to output left
bindsym $alt+Down move workspace to output down
bindsym $alt+Up move workspace to output up
bindsym $alt+Right move workspace to output right

# Définition des workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Changement de workspace
bindsym $mod+ampersand workspace $ws1
bindsym $mod+eacute workspace $ws2
bindsym $mod+quotedbl workspace $ws3
bindsym $mod+apostrophe workspace $ws4
bindsym $mod+parenleft workspace $ws5
bindsym $mod+minus workspace $ws6
bindsym $mod+egrave workspace $ws7
bindsym $mod+underscore workspace $ws8
bindsym $mod+ccedilla workspace $ws9
bindsym $mod+agrave workspace $ws10

# Change le focus des fenêtre du workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+eacute move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+egrave move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+ccedilla move container to workspace $ws9
bindsym $mod+Shift+agrave move container to workspace $ws10

# Rechargement du fichier de configuration
bindsym $mod+Shift+c reload

# Redémmarrage de i3
bindsym $mod+Shift+r restart

# Quitter i3 (fermeture de X)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Vous avez utilisé le raccourci pour quitter i3, voulez vous vraiment quitter i3 ?.' -B 'Oui, quitter i3' 'i3-msg exit'"

# Mode resize
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# Activation de mode resize
bindsym $mod+r mode "resize"

# Gaps
gaps inner 6
gaps outer 6
# smart_gaps on
smart_borders on

# Suppression de la barre de titre
default_border none

# Suppression de la bordure
for_window [class=".*"] border pixel 0

# Suppression de la bordure et de la barre de titre
for_window [class="Brave"] border pixel 0
for_window [class="google-chrome"] border pixel 0
for_window [class="obsidian"] border  pixel 0
for_window [class="Dropdown Terminal"] border pixel 0

# Alignement au centre du titre des fenêtre
title_align center

# class         		border  backgr. text    indicator child_border  
client.focused_inactive #1F2428 #1E1E1E #999999 #1E1E1E #1E1E1E                                                                        
client.unfocused        #1F2428 #1E1E1E #999999 #1E1E1E #1E1E1E                                                                            
client.focused          #1F2428 #1E1E1E #ffffff #1E1E1E #1E1E1E  

# Assignation des workspaces
exec --no-startup-id google-chrome-stable

assign [class="Code"] $ws3

assign [class="discord"] $ws9
exec --no-startup-id discord

# Scraptchpad terminal
for_window [class="DropdownTerminal"] move container to scratchpad 
for_window [class="DropdownTerminal"] move scratchpad
for_window [class="DropdownTerminal"] border pixel 0
for_window [class="DropdownTerminal"] resize set 1225 800
bindsym $mod+t scratchpad show

# AUTORUN
exec_always --no-startup-id dunst 
exec_always --no-startup-id feh --bg-scale "$HOME/.config/i3/background.jpg"
exec_always --no-startup-id picom --config "$HOME/.config/picom/picom.conf"
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id kitty --class "DropdownTerminal"
exec --no-startup-id xkb-switch --i3
exec setxkbmap fr
